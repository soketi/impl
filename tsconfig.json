{
  "include": [
    "./types/**/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "removeComments": true,
    "declaration": true,
    "lib": [
      "ES2020"
    ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types",
    ],
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@soketi/impl/types": [
        "./types/index.d.ts"
      ],
      "@soketi/impl": [
        "./src"
      ],
      "@soketi/impl/*": [
        "./src/*"
      ],
    },
  }
}
